<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8"/>
    <title>BERKUT HUD</title>
    <link href="./vendor/font-awesome/css/font-awesome.min.css" rel="stylesheet"/>
    <link href="./css/style.css" rel="stylesheet"/>
    <script src="./vendor/vue/vue.js"></script>
    <script src="./js/app.js"></script>
  </head>
  <body>
    <div class="searchbar" id="searchbar">
      <i class="fa fa-search searchbar-icon"></i>
      <input class="searchbar-input"
             id="searchbar-input"
             v-model="query"
             type="text"
             placeholder="Search"/>
    </div>

    <div class="searchresult" id="searchresult">
      <div class="searchresult-item"
           v-for="result, index in results"
           ref="item"
           draggable="true"
           v-on:dragstart="startdrag(result)">
        <div class="thumbnail-wrapper">
          <img class="thumbnail" v-bind:alt="result"
               v-bind:src="'data:image/png;base64,' + thumbnails[index]"
               v-show="thumbnails[index]"/>
        </div>
        <div class="pathname">{{ result }}</div>
      </div>
    </div>
  </body>
</html>
